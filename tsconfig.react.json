{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "react"],
    "paths": {
      "@template-barista/application": ["./packages/application/src"],
      "@template-barista/application/*": ["./packages/application/src/*"],
      "@template-barista/design-system": ["./packages/design-system/src"],
      "@template-barista/design-system/*": ["./packages/design-system/src/*"],
      "@template-barista/server": ["./packages/server/src"],
      "@template-barista/server/*": ["./packages/server/src/*"],
      "@template-barista/theme": ["./packages/theme/src"],
      "@template-barista/theme/*": ["./packages/theme/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
